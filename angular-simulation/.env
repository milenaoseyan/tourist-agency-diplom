# Сервер
NODE_ENV=development
PORT=5000

# База данных
MONGODB_URI=mongodb://localhost:27017/travelwave

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Рефреш токен
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-too
JWT_REFRESH_EXPIRES_IN=180d

# Email (для production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# Клиент
CLIENT_URL=http://localhost:3000

# Загрузка файлов
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=./uploads

# Ограничения
MAX_BOOKINGS_PER_USER=10
MAX_REVIEWS_PER_TOUR=100