# Сервер
NODE_ENV=development
PORT=5000

# База данных
MONGODB_URI=mongodb://localhost:27017/travelwave

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Рефреш токен
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-too
JWT_REFRESH_EXPIRES_IN=180d

# Email (для production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password

# Клиент
CLIENT_URL=http://localhost:3000

# Загрузка файлов
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=./uploads

# Ограничения
MAX_BOOKINGS_PER_USER=10
MAX_REVIEWS_PER_TOUR=100


# ... предыдущие настройки ...

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/v1/auth/github/callback

# OAuth - VK
VK_CLIENT_ID=your-vk-app-id
VK_CLIENT_SECRET=your-vk-client-secret
VK_CALLBACK_URL=http://localhost:5000/api/v1/auth/vk/callback

# 2FA (TOTP)
TOTP_ISSUER=TravelWave
TOTP_ENCRYPTION_KEY=your-totp-encryption-key-32-bytes-long!

# CSRF
CSRF_SECRET=your-csrf-secret-key-change-in-production
CSRF_COOKIE_NAME=XSRF-TOKEN
CSRF_HEADER_NAME=X-XSRF-TOKEN

# Шифрование
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data
ENCRYPTION_ALGORITHM=aes-256-gcm

# Session (для OAuth)
SESSION_SECRET=your-session-secret-for-oauth

# Security Headers
CSP_DIRECTIVES="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';"

# Rate Limiting - усиленный
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Блокировка после неудачных попыток
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_TIME=900000 # 15 минут

# IP Whitelist для админ-панели (опционально)
ADMIN_IP_WHITELIST=127.0.0.1,::1